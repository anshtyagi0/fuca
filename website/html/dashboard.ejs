  <title>Fuca Bot - My Guilds</title>
</head>

<body style="background: #141414;">
  <%- include("modules/default/menu") -%>
  <div class="my-guilds" style="text-align: center; margin-top: 100px;">
    <!-- Botones ya hechos, aÃ±adirle un for cada guild en cada uno, y poner su ID y en la invitacion directamente a la id del gremio -->
    <% for(const x of guilds) { %>
      <% let getGuild = bot.guilds.cache.get(x.id) %>
      <% if(getGuild) { %>
        <% if(!getGuild) return; %>
        <% let hasPermission = getGuild.members.cache.find(e => e.id === id).permissions.has("manageGuild"); %>
        <% if(!hasPermission) return; %>
        <div class="this-guild" style="display: inline-block; margin-top: 10px;">
          
          <% if(x.icon){ %>
            <img src="https://cdn.discordapp.com/icons/<%= x.id %>/<%= x.icon %>.png" class="guild-icon rounded-circle" />
          <% } else { %>
            <img src="https://images-ext-2.discordapp.net/external/NAqkMZNPJgDiWBrSDqniAD1_sbWfiPqF4mgZyCtVs6s/https/discordapp.com/assets/6debd47ed13483642cf09e832ed0bc1b.png" class="guild-icon guild-icon rounded-circle" />
          <% } %>

          <div class="manage-guild">
            <a id="this-href" href="/guild/<%= x.id %>">
              <button class="gen-button" id="manage-button">Manage</button>
            </a>
          </div>
        </div>
        <% } else {%>
        <div class="this-guild" style="display: inline-block; margin-top: 10px;">
          <% if(x.icon){ %>
            <img src="https://cdn.discordapp.com/icons/<%= x.id %>/<%= x.icon %>.png" class="guild-icon no-listed guild-icon rounded-circle" />
          <% } else { %>
            <img src="https://images-ext-2.discordapp.net/external/NAqkMZNPJgDiWBrSDqniAD1_sbWfiPqF4mgZyCtVs6s/https/discordapp.com/assets/6debd47ed13483642cf09e832ed0bc1b.png" class="guild-icon no-listed guild-icon rounded-circle" />
          <% } %>

        <div class="invite-to-guild">
          <a id="this-href" href="https://discord.com/oauth2/authorize?response_type=code&redirect_uri=https%3A%2F%2FFuca.fluiddev.xyz%2Fdashboard&permissions=1099511627775&client_id=1019613932211675237&guild_id=<%= x.id %>&scope=bot%20applications.commands">
            <button class="gen-button" id="invite-button">Invite</button>
          </a>
        </div>
      </div>
      <% } %>
    <% } %>
  </div>
</body>
</html>